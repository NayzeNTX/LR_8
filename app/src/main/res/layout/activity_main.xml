<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#120620"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginTop="100dp"
        android:background="#130427"
        android:src="@drawable/picture1" />

    <Button
        android:id="@+id/videolay"
        android:layout_width="180dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="646dp"
        android:layout_marginEnd="116dp"
        android:backgroundTint="#0B3988"
        android:onClick="onBtnClick"
        android:text="Перейти к видео" />

    <SeekBar
        android:id="@+id/volumeControl"
        style="@android:style/Widget.Material.SeekBar"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="570dp"
        android:progressTint="#FFFFFF" />

    <Button
        android:id="@+id/button1"
        android:layout_width="107dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="570dp"
        android:backgroundTint="#073183"
        android:text="Назад" />

    <Button
        android:id="@+id/button2"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="571dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#0A3B8E"
        android:text="Вперёд" />

</RelativeLayout>